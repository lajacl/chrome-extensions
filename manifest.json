{
    "manifest_version": 2,
    "name": "Web Mentor",
    "version": "1.0",
    "description": "Allows guardians to block or set a time limit for social media or any chosen websites. This restricts internet web accces to children. A message to do something more productive can be shown when the limit is reached. The user can be redirected to a site of the parent's choice",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },    
    "browser_action": {
        "default_icon": "icon.png"
    },  
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "toggle-timeout": {
          "suggested_key": {
            "default": "Alt+S",
            "mac": "Alt+S"
          },
          "description": "Toggle restrictions"
        },
        "_execute_browser_action": {
          "suggested_key": {
            "windows": "Ctrl+Shift+S",
            "mac": "Command+Shift+S",
            "chromeos": "Ctrl+Shift+S",
            "linux": "Ctrl+Shift+S"
          }
        }
    },
    "homepage_url": "http://webmentor.web.applifylife.com",
    "incognito": "split",
    "permissions": ["storage",
        "alarms",
        "*://*.facebook.com/*",
        "*://*.messenger.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.whatsapp.com/*",
        "*://*.youtube.com/*",
        "*://*.vimeo.com/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "options_page": "options.html",
    "options_ui": {
        "chrome_style": true,
        "page": "options.html",
        "open_in_tab": false
    }

}